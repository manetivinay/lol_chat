<h2 align="center">Create An Account</h2>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h4>
            <%= pluralize(@user.errors.count, "error") %>
            Prohibited this User from being created.
          </h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li> <%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="container">
      <div class="row col-md-12" style="border:1px solid black; padding: 30px 30px 30px 30px;">

        <div class="input-field ">
          <%= f.label :name %>
          <%= f.text_field :name, :placeholder => 'Enter your name...', :class => "validate" %>
        </div>

        <div class="input-field ">
          <%= f.label :email %>
          <%= f.text_field :email, :placeholder => 'Enter your Email...', class: 'validate' %>
        </div>

        <div class="input-field ">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: 'please enter your password...', class: 'validate' %>
        </div>

        <div class="input-field ">
          <%= f.submit 'Create Account', class: 'btn btn-secondary ' %>
        </div>

      </div>
    </div>
<% end %>